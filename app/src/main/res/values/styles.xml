<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarPopupTheme">@style/actionBarPop</item>
    </style>

    <style name="actionBarPop" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>
    </style>

    <dimen name="search_list_bottom_margin">55dp</dimen>

    <style name="seekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="volumeSeekBar" parent="seekBar">
        <item name="android:thumb">@drawable/shape_volume_seek_thumb</item>
        <item name="android:progressDrawable">@drawable/layer_volume_seek_bg</item>
        <item name="android:maxHeight">2dp</item>
    </style>

    <style name="mediaSeekBar" parent="seekBar">
        <item name="android:maxHeight">2dp</item>
        <item name="android:thumb">@drawable/shape_media_seek_thumb</item>
        <item name="android:progressDrawable">@drawable/layer_media_seek_bg</item>
    </style>
</resources>
