<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarPopupTheme">@style/actionBarPop</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteStyle</item>
    </style>

    <style name="NoActonBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="actionBarPop" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="AutoCompleteStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <!--<item name="android:popupBackground">@drawable/abc_popup_background</item>-->
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <dimen name="search_list_bottom_margin">55dp</dimen>

    <style name="volumeSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/shape_volume_seek_thumb</item>
        <item name="android:progressDrawable">@drawable/layer_volume_seek_bg</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="mediaSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:maxHeight">2dp</item>
        <item name="android:thumb">@drawable/shape_media_seek_thumb</item>
        <item name="android:progressDrawable">@drawable/layer_media_seek_bg</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>
</resources>
